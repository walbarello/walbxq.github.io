jsk-body-font = 'Lora', serif
jsk-heading-font = 'PT Sans Caption', sans
jsk-subheading-font = 'Raleway', sans
jsk-mono-font = monospace
jsk-base-line-height = 1.2em
jsk-base-font-size = 16px
jsk-base-colour = #5f5f5f
link-colour = #70b1ef

@import "nib"
global-reset()

@import "entypo-stylus"
@import "jumper-skirt/layout/grid"
@import "jumper-skirt/layout/typography"

jsk-grid-width = 100%
entypo-define('Entypo Social', '/fonts/entypo-social/entypo-social', 'entypo-social')

// -- Actual definitions -----------------------------------------------
body
  background: #f3f3f3

a
  color: darken(link-colour, 20%)
  text-decoration: none
a:hover
  text-decoration: underline

#header
  text-align: right
  background: #fff

#top-navigation
  ul
    text-align: right
    list-style: none
    margin: 0
    padding: 0 50px
    border-bottom: 1px solid #f3f3f3
  li
    display: inline-block
    margin: 0
  a
    text-decoration: none
    color: #888
    padding: 0.8em 0.5em
    font-size: 22px
    font-family: jsk-heading-font
    font-weight: lighter
    transition: all .3s ease-out
    display: block
    border-bottom: 4px solid transparent
    text-transform: lowercase
  a:hover
    color: link-colour
  a.active
    border-bottom-color: link-colour
    color: link-colour
    font-weight: bold

#content
  background: #fff
  padding: 2em 0    
    
#footer
  padding: 3em 0 2em 0
  border-top: 1px solid #ddd
  box-shadow: inset 1px 0px 0px rgba(255,255,255,0.8)
  background: #f3f3f3
  text-align: center
  font-family: "Source Sans Pro", sans
  letter-spacing: 0.1em
  
  #social
    list-style: none
    li, a
      width: 64px
      height: 64px
      display: inline-block
    a
      text-decoration: none
      color: #999
    a:hover
      color: jsk-base-colour
    i
      font-size: 96px
      font-style: normal

  #meta-info
    color: #999

    .heart
      color: #e74c3c
      font-size: 1.3em
      padding: 0 0.02em
      position: relative
      top: 0.1em

// -- Le blog
#content-wrapper
  max-width: 750px
  margin: 0 auto
  font-size: 20px
  color: jsk-base-colour
  line-height: 1.5em
  padding: 20px

  h2
    letter-spacing: -0.02em
    color: #2f2f2f
    font-size: 36px
    font-weight: bold !important
                

#post-listing
  list-style: none
  margin: 0

  li
    border-bottom: 1px solid #f3f3f3
    margin-bottom: 1em
    padding-bottom: 1em

  li:last-child
    border: none

  .post-title
    margin: 0 0 0.2em 0

  .post-title a
    margin-bottom: 0
    line-height: 1.2em
    color: #34495e
    
  .post-subtitle
    font-family: jsk-body-font
    margin: 0
    font-size: 18px
    line-height: 22px
    color: #95a5a6

  .date
    color: #bbb
    font-size: 12px
    text-transform: uppercase
    margin: 0.5em 0 -0.5em 0
    font-family: "Source Sans Pro", sans


.page-heading
  margin-bottom: 2em

  .meta
    font-size: 0.9em
    color: #bbb
    font-family: jsk-heading-font
  .published-date
    margin-top: -0.5em


                  
.textual-content
  h3
    font-size: 28px
    letter-spacing: 0.02em
    border-bottom: 1px solid #f3f3f3
    padding-bottom: 0.3em
    margin-bottom: 0.3em

  h4
    font-size: 28px
    font-weight: 300 !important
    font-family: jsk-subheading-font
    color: #95a5a6
    margin-bottom: 0.3em
    letter-spacing: -0.02em
    text-transform: uppercase
    border-bottom: 1px solid #f3f3f3

  .normalcase
    text-transform: none

  .borderless
    border: none
                    
  blockquote
    border-left: 3px solid #ecf0f1

  blockquote.note
    color: #acb2b6

  blockquote .heading
    border-bottom: 1px solid #f3f3f3
    margin-bottom: 0.5em
    font-family: jsk-heading-font
    font-weight: bold
    text-transform: uppercase
    display: block

  blockquote.warning
    border-color: #e74c3c

  blockquote.warning .heading
    color: #e74c3c

  blockquote.info
    border-color: #2980b9

  blockquote.info .heading
    color: #2980b9

  blockquote.trivia
    border-color: #1abc9c

  blockquote.trivia .heading
    color: #16a085
                 
  blockquote p:last-child
    margin-bottom: 0

  #table-of-contents
    font-size: 28px
    color: #7f8c8d
    border-bottom: 1px solid #f3f3f3
    padding-bottom: 0.3em

  #markdown-toc ul
    margin: 0 0 0 2em

  #markdown-toc li
    margin: 0
    line-height: 1.6em

  .highlight, pre.src, .simple-code
    margin: 2em 0
    border: 1px solid #ecf0f1
    border-left-width: 2px
    padding: 0.5em
    font-family: jsk-mono-font
    font-size: 16px
    line-height: 22px
    display: block

  .highlight, .highlight pre, .highlight code, .simple-code, .simple-code code
    background: #fcfcfc
    color: #7f8c8d

  .highlight pre, .simple-code
    overflow: auto

  .highlight code, .highlighttable code, .simple-code code
    padding: 0

  .highlight
    border-collapse: collapse
    border: 1px solid #ecf0f1
    border-left-width: 2px
    font-size: 16px
    width: auto
    line-height: 22px
    font-family: jsk-mono-font
    margin: 2em 0

    td
      vertical-align: top
      padding: 0.5em

    td.gutter
      background: #fff
      width: 20px
      text-align: right
      border-right: 1px solid #ecf0f1

    td.gutter code, td.gutter pre
      background-color: #fff
      color: #bdc3c7

    td.code
      border-left: 1px solid #ecf0f1
      background: #fcfcfc

      .highlight
        padding: 0 0 0 0.5em
        margin: 0
        border: none

  table.common-table
    border-collapse: collapse
    border: 1px solid #ecf0f1
    border-left-width: 2px

    td, th
      border: 1px solid #ecf0f1
      padding: 0.25em
      position: relative

    th
      background: #ecf0f1
      font-family: jsk-heading-font, sans
      text-align: center
      
    .up
      position: absolute
      top: -1px
      right: 0px
      display: block
      width: 100%
      height: 1px
      background: #fff
                     
                    
  img
    margin: 0 auto
    padding: 20px
    border: 1px solid #ecf0f1
    display: block

  .clear::after
    content: ""
    display: block
    clear: both

  .side-description
    color: #999
    padding: 40px 0
                 
  .pull-left
    margin: 0.5em 1em 1em -100px
    float: left

  .pull-right
    margin: 0.5em -100px 1em 1em
    float: right

  .pull-left, .pull-right, .centred-image
    text-align: center
    padding: 20px
    border: 1px solid #ecf0f1
    display: block
               
    img
      padding: 0
      border: 0

    em
      font-style: italic
      font-size: 16px
      color: #95a5a6
      
  .full-image img
    width: 100%
    height: auto

  .bring-to-top
    position: relative
    z-index: 3

  .width-350
    width: 350px
    
  code
    font-family: jsk-mono-font
    color: #95a5a6
    background: #f3f3f3
    padding: 0 0.2em

  .simple-inline-code code
    background: none
               
  .highlight-paragraph
    font-style: italic
    font-size: 32px
    line-height: 38px
    border: none
    margin: 1.5em -1em
    padding: 0
    text-align: center
    color: #95a5a6

    cite
      font-size: 16px
      line-height: 100%
      text-align: right
      display: block

  .pull-in
    margin-left: 1em
    margin-right: 1em
               
               
  // Things from the old site
  sup, sub
    font-size: 80%
  sup
    vertical-align: super
  sub
    vertical-align: bottom

  hr
    display: block
    height: 1px
    border: none
    border-bottom: 1px solid #ecf0f1
    margin: 0px auto
    width: 100px
    padding: 1em 0 0 0

  dt
    font-family: jsk-heading-font
    text-transform: uppercase
    font-weight: bold
    line-height: 100%
    color: #7f8c8d
    letter-spacing: 0.02em
  dd
    border-left: 2px solid #ecf0f1
    padding-left: 20px
    color: #95a5a6
    margin-top: 10px
    margin-bottom: 1.5em
    line-height: 1.5em

  .CodeRay .code .line-numbers
    display: none;
                  
  .contact-footer
    border-top: 1px solid #ecf0f1
    margin: 3em 0
    font-size: 16px
    line-height: 20px
    color: #95a5a6
    padding: 1em
                  
  .twitter-tweet
    margin: 10px auto !important

  .tabs
    padding: 0
    margin: 1em 0 0 0
    list-style: none
    clearfix: yes

    li
      float: left
      margin: 0
    a
      display: inline-block
      padding: 0.5em 1.5em
      border: 1px solid #ddd
      color: #999
      border-left-width: 0
      border-bottom: 0
      text-decoration: none
      background: #fafafa
      &:first-child
        border-left-width: 1px
      &:hover
        border-top-color: link-colour
        color: #555
        background: #fff
    a.active
      border-top: 5px solid link-colour
      margin-top: -5px
      color: jsk-base-colour
      background: #fff

  .tab-contents
    padding: 10px 20px 0px 20px
    font-size: 90%
    border: 1px solid #ddd
    margin-bottom: 1.5em


  .tab-contents > div
    display: none
  .tab-contents > div.active
    display: block


// Some images are special
.special-image-1 {
  height: 520px;
  img {
    position: relative;
    top: -206px;
    z-index: 0;
  }
}

.special-image-2 {
  height: 490px;
  img {
    position: relative;
    top: -150px;
  }
}


@media (max-width: 970px) {
    #wrapper #content {
        .pull-left {
            margin-left: 0;
        }
        .pull-right {
            margin-right: 0;
        }
        .highlighttable {
            border-width: 1px 0;
        }
        .highlighttable td {
            padding: 2px 0;
        }
        .highlighttable .linenos {
            display: none;
        }
        .highlighttable .code {
            border: 0;
        }
        .highlighttable .highlight {
            font-size: 13px;
            line-height: 16px;
        }
        pre, pre span {
            white-space: pre-wrap;
        }

    }
}

@media (max-width: 750px) {
    #wrapper #content {
        blockquote {
            margin-left: 0;
            margin-right: 0;
        }
        
        img {
            padding: 0;
            position: static;
            width: 100%;
            height: auto;
        }

        iframe {
            border-width: 1px 0px;
            padding: 2px 0px;
            width: 100%;
            height: auto;
        }

        .pull-left, .pull-right, .centred-image {
            border-width: 1px 0;
            padding: 2px 0;
        }
        
        .pull-left, .pull-right {
            margin: 0.5em 0 1em 0;
            float: none;
        }

        .special-image-1, .special-image-2 {
            height: auto;
        }

        ul, ol {
            margin-left: 1.2em;
        }
    }
}